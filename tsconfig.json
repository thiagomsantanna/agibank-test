{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@test": ["config/fixtures.ts"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
    },
    "typeRoots": ["@types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules"],
  "include": [
    "@types/**/*.ts",
    "config/**/*.ts",
    "playwright.config.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts"
  ]
}
